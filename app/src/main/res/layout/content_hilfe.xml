<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ch.ffhs.esa.mymeteo.HilfeActivity"
    tools:showIn="@layout/activity_hilfe">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:padding="15dp"
        android:text="@string/hilfetext" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="startWebCam"
        android:text="WebCam" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startImageCrawler"
        android:text="Bilder"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/button3"
        android:layout_marginEnd="14dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startSBB"
        android:text="SBB"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/button4"
        android:layout_marginEnd="14dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button5"
        android:layout_marginBottom="68dp"
        android:layout_toEndOf="@+id/button7"
        android:onClick="Route"
        android:text="Routen" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="14dp"
        android:layout_toStartOf="@+id/button5"
        android:onClick="startFlug"
        android:text="FlÃ¼ge" />

</RelativeLayout>
